<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="changepin.ChangePinController">
        <content>
            <AnchorPane prefHeight="505.0" prefWidth="760.0" styleClass="login-main" stylesheets="@../design/design.css">
                <children>
                    <Pane layoutX="180.0" prefHeight="505.0" prefWidth="400.0">
                        <children>
                            <Label layoutX="109.0" layoutY="20.0" text="Change PIN" textAlignment="CENTER">
                                <font>
                                    <Font name="Padauk Bold" size="33.0" />
                                </font>
                            </Label>
                            <JFXPasswordField fx:id="confirm_pin" focusColor="#007ff5" layoutX="40.0" layoutY="280.0" prefHeight="40.0" prefWidth="300.0" promptText="Repead new PIN" unFocusColor="#007ff5">
                                <font>
                                    <Font size="19.0" />
                                </font>
                            </JFXPasswordField>
                            <Button layoutX="75.0" layoutY="424.0" mnemonicParsing="false" onMouseClicked="#changePin" prefHeight="40.0" prefWidth="250.0" styleClass="login-button" stylesheets="@../design/design.css" text="   Change PIN">
