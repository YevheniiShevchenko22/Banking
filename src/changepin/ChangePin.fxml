                                    <FontAwesomeIconView glyphName="SAVE" size="20" styleClass="login-icon" />
                                </graphic>
                                <font>
                                    <Font size="19.0" />
                                </font>
                            </Button>
                  <JFXPasswordField fx:id="old_pin" focusColor="#007ff5" layoutX="40.0" layoutY="100.0" prefHeight="40.0" prefWidth="300.0" promptText="Old PIN" unFocusColor="#007ff5">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </JFXPasswordField>
                  <JFXPasswordField fx:id="new_pin" focusColor="#007ff5" layoutX="40.0" layoutY="190.0" prefHeight="40.0" prefWidth="300.0" promptText="New PIN" unFocusColor="#007ff5">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </JFXPasswordField>
                        </children>
                    </Pane>
                </children>
            </AnchorPane>
        </content>
    </ScrollPane>
